{
  "name": "cdk-infra-controller",
  "version": "0.1.0",
  "bin": {
    "cdk-infra-controller": "bin/cdk-infra-controller.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy:local": "cdk deploy --profile thwaitehowe",
    "cdk:local": "cdk synth --profile thwaitehowe",
    "diff:local": "cdk diff --profile thwaitehowe",
    "lint": "eslint .",
    "test:dev:config": "vitest run test/dev.test.ts",
    "test:prod:config": "vitest run test/prod.test.ts",
    "test:unit:cloudfront": "vitest run test/constructs/cloudfront-construct.test.ts",
    "test:unit:route53": "vitest run test/constructs/route53-construct.test.ts",
    "test:constructs": "vitest run test/cdk-aws-apps-controller-stack.test.ts",
    "test": "vitest run",
    "diff:dev": "NODE_OPTIONS='--max-old-space-size=490' cdk diff",
    "diff:prod": "NODE_OPTIONS='--max-old-space-size=490' cdk diff --quiet --app \"npx ts-node bin/prod.ts\"",
    "cdk:dev": "cdk synth --quiet",
    "cdk:prod": "NODE_OPTIONS='--max-old-space-size=490' cdk synth --quiet --app \"npx ts-node bin/prod.ts\"",
    "deploy:dev": "NODE_OPTIONS='--max-old-space-size=490' cdk deploy",
    "deploy:prod": "NODE_OPTIONS='--max-old-space-size=490' cdk deploy --quiet --app \"npx ts-node bin/prod.ts\"",
    "destroy:dev": "cdk destroy",
    "destroy:prod": "cdk destroy --app \"npx ts-node bin/prod.ts\""
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/aws-lambda": "^8.10.149",
    "@types/dotenv": "^6.1.1",
    "@types/node": "22.7.9",
    "aws-cdk": "2.134.0",
    "aws-sdk": "^2.1692.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "aws-cdk-lib": "2.134.0",
    "constructs": "^10.0.0"
  }
}
